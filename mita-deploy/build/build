#!/bin/bash

set -ex

# the following two methods exist in scripts/build_utils.sh
pkgs=( "ansible" )
install_python_packages "pkgs[@]"

cd "$WORKSPACE/deploy/playbooks/"
$VENV/ansible-playbook -i "localhost," local_deploy.yml --extra-vars="branch=$BRANCH jenkins_prado_token=$JENKINS_PRADO_TOKEN prado_token=$PRADO_TOKEN"
